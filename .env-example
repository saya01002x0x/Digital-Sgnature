# ==========================================
# 1. DATABASE CONFIGURATION (POSTGRESQL)
# ==========================================
# Tên DB trong Docker (Khác biệt để chắc chắn mới)
POSTGRES_DB=miiao29_db
POSTGRES_USER=miiao29_user
POSTGRES_PASSWORD=miiao29_pass


POSTGRES_PORT=5433
# Cổng nội bộ Docker (Luôn là 5432 - ĐỪNG SỬA)
POSTGRES_INTERNAL_PORT=5432

# ==========================================
# 2. BACKEND CONFIGURATION (SPRING BOOT)
# ==========================================
# Kết nối nội bộ: trỏ vào service "postgres" port 5432
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/miiao29_db
SPRING_DATASOURCE_USERNAME=miiao29_user
SPRING_DATASOURCE_PASSWORD=miiao29_pass

# JWT Secret mới (Để invalidate toàn bộ token cũ)
JWT_SECRET=new_secret_key_8f9a7b3c1d2e0a9b8c7d6e5f4a3b2c1_reset_2025
JWT_EXPIRATION=900000

# Server Port
SERVER_PORT=5555
BACKEND_PORT=5555
BACKEND_INTERNAL_PORT=5555

# Cấu hình Email & File (Giữ nguyên)
APP_UPLOAD_DIR=/app/uploads
APP_BASE_URL=http://localhost:5555
APP_EMAIL_ENABLED=false
APP_EMAIL_TEST_MODE=true

# Kết nối Frontend
CORS_ALLOWED_ORIGIN=http://localhost:5556
FRONTEND_URL=http://localhost:5556

# ==========================================
# 3. FRONTEND CONFIGURATION (VITE / REACT)
# ==========================================
VITE_API_URL=http://localhost:5555
VITE_APP_NAME=Digital Signature
FRONTEND_PORT=5556
FRONTEND_INTERNAL_PORT=80

# Environment Flags
VITE_IS_DEV=false 
VITE_IS_PROD=true
VITE_I18N_DEFAULT_LANG=vi

# QUAN TRỌNG: Tắt Mock tuyệt đối
VITE_USE_MSW=false